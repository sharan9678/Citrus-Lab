<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="@dimen/_20sdp"
    android:paddingBottom="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/popup_bg_container"
    tools:ignore="RtlSymmetry">

    <TextView
        android:id="@+id/popup_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_16sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Script"
        android:fontFamily="@font/inter"
        android:textColor="@color/secondary_colour"
        />
    <Button
        android:id="@+id/profile_popup_cust"
        app:layout_constraintTop_toTopOf="@+id/popup_header"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="@dimen/_240sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_36sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:background="@drawable/popup_top_button"
        android:text="import Custom Script"
        android:fontFamily="@font/inter"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/profile_popup_cur"
        app:layout_constraintTop_toBottomOf="@+id/profile_popup_cust"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="@dimen/_240sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:background="@drawable/popup_bottom_button"
        android:text="Current settings"
        android:fontFamily="@font/inter"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/popup_clear"
        app:layout_constraintTop_toBottomOf="@+id/profile_popup_cur"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_140sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/rounded_btn"
        android:paddingTop="@dimen/_6sdp"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_30sdp"
        android:fontFamily="@font/inter"
        android:textAlignment="center"
        android:text="Clear"
        android:textColor="@color/secondary_colour"
        android:textSize="@dimen/_13sdp"/>

    <TextView
        android:id="@+id/popup_cancel"
        app:layout_constraintTop_toBottomOf="@+id/profile_popup_cur"
        app:layout_constraintStart_toEndOf="@+id/popup_clear"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/rounded_btn"
        android:paddingTop="@dimen/_6sdp"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_30sdp"
        android:fontFamily="@font/inter"
        android:textAlignment="center"
        android:text="Cancel"
        android:textColor="@color/secondary_colour"
        android:textSize="@dimen/_13sdp"/>
</androidx.constraintlayout.widget.ConstraintLayout>