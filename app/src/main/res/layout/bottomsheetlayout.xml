<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet"
    android:clickable="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:paddingBottom="@dimen/_10sdp"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:visibility="invisible"
            android:id="@+id/menu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans_semibold"
            android:textSize="@dimen/_16sdp"
            android:text="Citrus Lab Menu"
            android:textColor="#A8A5A5"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_12sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_224sdp"
            android:layout_marginTop="@dimen/_9sdp"
            android:id="@+id/about"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@drawable/ic_about"/>
        <ImageButton
            app:layout_constraintStart_toEndOf="@+id/about"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/close_menu"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:background="#494949"
            android:foreground="@drawable/rounded_btn"
            android:src="@drawable/ic_menu" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="@dimen/_100sdp"
        android:layout_height="4dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_98sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/btm_page_pill" />

    <LinearLayout
        android:id="@+id/layoutHome"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bottompage"
        android:backgroundTint="@color/bottom_page"
        android:paddingStart="@dimen/_20sdp"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp"
        tools:ignore="RtlSymmetry">

        <ImageView
            android:id="@+id/imageViewDash"
            android:layout_width="@dimen/_21sdp"
            android:layout_height="@dimen/_21sdp"
            android:src="@drawable/ic_home" />

        <TextView
            android:id="@+id/textViewDash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/inter"
            android:text="DASHBOARD"
            android:letterSpacing="0.2"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutDisplay"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bottompage"
        android:backgroundTint="@color/bottom_page"
        android:layout_marginTop="@dimen/_4sdp"
        android:paddingStart="@dimen/_20sdp"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp"
        tools:ignore="RtlSymmetry">

        <ImageView
            android:id="@+id/imageViewDisp"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:src="@drawable/ic_display" />

        <TextView
            android:id="@+id/textViewDisp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:fontFamily="@font/inter"
            android:text="DISPLAY"
            android:letterSpacing="0.2"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutCpu"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bottompage"
        android:backgroundTint="@color/bottom_page"
        android:layout_marginTop="@dimen/_4sdp"
        android:paddingStart="@dimen/_20sdp"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp"
        tools:ignore="RtlSymmetry">

        <ImageView
            android:id="@+id/imageViewCpu"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/ic_cpu" />

        <TextView
            android:id="@+id/textViewCpu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:fontFamily="@font/inter"
            android:text="CPU"
            android:letterSpacing="0.2"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutGpu"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bottompage"
        android:backgroundTint="@color/bottom_page"
        android:layout_marginTop="4dp"
        android:paddingStart="@dimen/_20sdp"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp"
        tools:ignore="RtlSymmetry">

        <ImageView
            android:id="@+id/imageViewGpu"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_gpu" />

        <TextView
            android:id="@+id/textViewGpu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_19sdp"
            android:fontFamily="@font/inter"
            android:text="GPU"
            android:letterSpacing="0.2"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutMem"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bottompage"
        android:backgroundTint="@color/bottom_page"
        android:layout_marginTop="4dp"
        android:paddingStart="@dimen/_20sdp"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp" >

        <ImageView
            android:id="@+id/imageViewMem"
            android:layout_width="@dimen/_23sdp"
            android:layout_height="@dimen/_23sdp"
            android:src="@drawable/ic_mem" />

        <TextView
            android:id="@+id/textViewMem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:fontFamily="@font/inter"
            android:text="MEMORY    "
            android:letterSpacing="0.3"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutPower"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bottompage"
        android:backgroundTint="@color/bottom_page"
        android:layout_marginTop="4dp"
        android:paddingStart="@dimen/_20sdp"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp" >

        <ImageView
            android:id="@+id/imageViewPow"
            android:layout_width="@dimen/_23sdp"
            android:layout_height="@dimen/_23sdp"
            android:src="@drawable/ic_power_thermal" />

        <TextView
            android:id="@+id/textViewPow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:fontFamily="@font/inter"
            android:text="POWER &amp; THERMALS"
            android:letterSpacing="0.3"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutProfile"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bottompage"
        android:backgroundTint="@color/bottom_page"
        android:layout_marginTop="4dp"
        android:paddingStart="@dimen/_20sdp"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp" >

        <ImageView
            android:id="@+id/imageViewProfile"
            android:layout_width="@dimen/_23sdp"
            android:layout_height="@dimen/_23sdp"
            android:src="@drawable/ic_profile" />

        <TextView
            android:id="@+id/textViewProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:fontFamily="@font/inter"
            android:text="PROFILE"
            android:letterSpacing="0.3"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutMisc"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bottompage"
        android:backgroundTint="@color/bottom_page"
        android:layout_marginTop="4dp"
        android:paddingStart="@dimen/_20sdp"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp" >

        <ImageView
            android:id="@+id/imageViewMisc"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/ic_misc" />

        <TextView
            android:id="@+id/textViewMisc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:fontFamily="@font/inter"
            android:text="MISCELLANEOUS"
            android:letterSpacing="0.3"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>