<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_64sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/primaryDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:text="Display Primary"
                    android:textColor="@color/item_text_colour"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/contentDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_33sdp"
                    android:fontFamily="sans-serif"
                    android:text="Content description here"
                    android:textColor="@color/content_desc"
                    android:textSize="@dimen/_10sdp" />

                <Switch
                    android:id="@+id/contentSwitch"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_200sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:theme="@style/Theme.MyApplication3.Switch" />

        </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>