<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/materialGrey_800"
    tools:context=".fragments.AboutFragment.AboutFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="760dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:background="@drawable/about_page_action_bar" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginLeft="96dp"
            android:layout_marginTop="200dp">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="25dp"
                android:src="@drawable/kakashi"
                app:civ_border_color="#FFE3E2E2"
                app:civ_border_width="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="127dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:letterSpacing="0.09"
                android:text="Tejas Udupa"
                android:textColor="@color/materialGreen"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="156dp"
                android:fontFamily="@font/nunito_sans"
                android:letterSpacing="0.05"
                android:text="\@trax85"
                android:textColor="@color/materialGreen"
                android:textIsSelectable="true"
                android:textSize="17sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="108dp"
            android:layout_marginTop="390dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:fontFamily="@font/nunito_sans"
                android:letterSpacing="0.02"
                android:text="About Author"
                android:textColor="#777777"
                android:textSize="18sp" />

            <View
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:layout_marginTop="30dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/nunito_sans"
                android:letterSpacing="0.01"
                android:text="Kernel Developer \n  C Programmer"
                android:textColor="#777777"
                android:textSize="11sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="480dp"
            android:clickable="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:fontFamily="@font/nunito_sans"
                android:letterSpacing="0.01"
                android:text="Social Media"
                android:textColor="#777777"
                android:textSize="18dp" />

            <View
                android:layout_width="170dp"
                android:layout_height="1dp"
                android:layout_marginTop="30dp"
                android:background="@android:color/darker_gray" />

            <ImageView
                android:id="@+id/github"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="42dp"
                android:clickable="true"
                android:src="@drawable/ic_github" />

            <ImageView
                android:id="@+id/gmail"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="42dp"
                android:clickable="true"
                android:src="@drawable/ic_gmail" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="115dp"
                android:clickable="true"
                android:fontFamily="@font/nunito_sans"
                android:letterSpacing="0.01"
                android:text="Latest Updates"
                android:textColor="#777777"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/downloads"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="62dp"
                android:layout_marginTop="143dp"
                android:clickable="true"
                android:src="@drawable/ic_updates" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>