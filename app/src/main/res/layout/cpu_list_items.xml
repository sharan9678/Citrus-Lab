<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/core_ctrl_container_bg"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingBottom="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/clusterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/nunito_sans_semibold"
            android:letterSpacing="0.02"
            android:text="Cluster Name"
            android:textColor="@color/secondary_colour"
            android:textSize="17sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <!-- Edit this to get the desired width of view item -->
        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:background="@drawable/inner_container_bg">

            <LinearLayout
                android:id="@+id/layoutMaxFreq"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:background="@drawable/rounded_btn"
                android:clickable="true"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="58dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/inter"
                    android:letterSpacing="0.01"
                    android:text="Max Frequency"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textviewMaxFreq"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="76dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/inter"
                    android:letterSpacing="0.01"
                    android:text="Mhz"
                    android:textAlignment="center"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="54dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/layoutMinFreq"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginTop="56dp"
                android:background="@drawable/rounded_btn"
                android:clickable="true"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="126dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/inter"
                    android:letterSpacing="0.01"
                    android:text="Min Frequency"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textviewMinFreq"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="79dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/inter"
                    android:letterSpacing="0.01"
                    android:text="Mhz"
                    android:textAlignment="center"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="110dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/layoutGov"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginTop="112dp"
                android:background="@drawable/rounded_btn"
                android:clickable="true"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="189dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/inter"
                    android:letterSpacing="0.01"
                    android:text="Governor"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textviewGov"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="115dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/inter"
                    android:letterSpacing="0.01"
                    android:text="Name"
                    android:textAlignment="center"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="167dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/layoutTune"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginTop="168dp"
                android:background="@drawable/rounded_btn"
                android:clickable="true"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="267dp">

                <TextView
                    android:id="@+id/textviewTune"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/inter"
                    android:letterSpacing="0.01"
                    android:text="Governor Tunables"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>