                android:fontFamily="@font/nunito_sans_extrabold"
                android:gravity="center"
                android:letterSpacing="0.06"
                android:text="CORE 6 ONLINE"
                android:textColor="#00C853"
                android:textSize="11.2sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/core_6"
                app:layout_constraintEnd_toEndOf="@+id/core_6"
                app:layout_constraintHorizontal_bias="0.4900"
                app:layout_constraintStart_toStartOf="@+id/core_6"
                app:layout_constraintTop_toTopOf="@id/core_6"
                app:layout_constraintVertical_bias="0.2" />

            <ImageView
                android:id="@+id/core_7"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:background="@drawable/cpu_core_bg"
                android:padding="5dp"
                android:src="@drawable/core_ctl"
