            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/inter"
            android:text="@string/core_control_info"
            android:textColor="#616161"
            android:textSize="@dimen/_8sdp"
