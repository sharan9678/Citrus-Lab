<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_action_bar"
    android:clickable="true"
    tools:context=".fragments.CpuFragment.CoreControl.CoreControlFragment">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/secondary_action_bar"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.011">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inter"
            android:text="Core Control"
            android:textColor="@color/secondary_colour"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/page_bg"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/inter"
            android:text="@string/core_control_info"
            android:textColor="#616161"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/ic_core_ctl_info"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ic_core_ctl_info"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_about"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/core_ctrl_container_bg"
            android:foregroundGravity="center"
            android:padding="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <ImageView
                android:id="@+id/core_1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginEnd="3dp"
                android:background="@drawable/cpu_core_bg"
                android:padding="5dp"
                android:src="@drawable/core_ctl"
                app:layout_constraintEnd_toStartOf="@+id/core_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_core_1"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/nunito_sans_extrabold"
                android:gravity="center"
                android:letterSpacing="0.06"
                android:text="CORE 1 ONLINE"
                android:textColor="#00C8AA"
                android:textSize="11.2sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/core_1"
                app:layout_constraintEnd_toEndOf="@+id/core_1"
                app:layout_constraintHorizontal_bias="0.4900"
                app:layout_constraintStart_toStartOf="@+id/core_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.2" />

            <ImageView
                android:id="@+id/core_2"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginStart="3dp"
                android:background="@drawable/cpu_core_bg"
                android:padding="5dp"
                android:src="@drawable/core_ctl"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="@id/core_1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_core_2"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/nunito_sans_extrabold"
                android:gravity="center"
                android:letterSpacing="0.06"
                android:text="CORE 2 ONLINE"
                android:textColor="#00C853"
                android:textSize="11.2sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/core_2"
                app:layout_constraintEnd_toEndOf="@+id/core_2"
                app:layout_constraintHorizontal_bias="0.4900"
                app:layout_constraintStart_toStartOf="@+id/core_2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.2" />

            <ImageView
