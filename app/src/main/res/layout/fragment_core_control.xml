                android:padding="5dp"
                android:src="@drawable/core_ctl"
                app:layout_constraintEnd_toStartOf="@+id/core_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/core_1" />

            <TextView
                android:id="@+id/text_core_3"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/nunito_sans_extrabold"
                android:gravity="center"
                android:letterSpacing="0.06"
                android:text="CORE 3 ONLINE"
                android:textColor="#00C853"
                android:textSize="11.2sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/core_3"
                app:layout_constraintEnd_toEndOf="@+id/core_3"
                app:layout_constraintHorizontal_bias="0.4900"
                app:layout_constraintStart_toStartOf="@+id/core_3"
                app:layout_constraintTop_toTopOf="@+id/core_3"
                app:layout_constraintVertical_bias="0.2" />

            <ImageView
                android:id="@+id/core_4"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/cpu_core_bg"
                android:padding="5dp"
                android:src="@drawable/core_ctl"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="@id/core_3"
                app:layout_constraintTop_toBottomOf="@id/core_2" />

            <TextView
                android:id="@+id/text_core_4"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/nunito_sans_extrabold"
                android:gravity="center"
                android:letterSpacing="0.06"
                android:text="CORE 4 ONLINE"
                android:textColor="#00C853"
                android:textSize="11.2sp"
                android:textStyle="bold"
