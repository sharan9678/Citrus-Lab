                app:layout_constraintEnd_toEndOf="@+id/core_4"
                app:layout_constraintHorizontal_bias="0.4900"
                app:layout_constraintStart_toStartOf="@+id/core_4"
                app:layout_constraintTop_toTopOf="@id/core_4"
                app:layout_constraintVertical_bias="0.2" />

            <ImageView
                android:id="@+id/core_5"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginTop="3dp"
