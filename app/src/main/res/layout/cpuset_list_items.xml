<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerHorizontal="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="@dimen/_260sdp"
            android:layout_height="@dimen/_68sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/core_ctrl_container_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/cpuset_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/nunito_sans_extrabold"
                    android:letterSpacing="0.05"
                    android:text="Name Header"
                    android:textColor="@color/item_text_colour"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/cpuset_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp"
                    android:background="@drawable/rounded_btn"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_26sdp"
                            android:layout_marginTop="@dimen/_9sdp"
                            android:fontFamily="@font/nunito_sans_bold"
                            android:text="CPUs"
                            android:textColor="#FFDADADA"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/cpuset_item_val"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_150sdp"
                            android:layout_marginTop="@dimen/_9sdp"
                            android:ellipsize="end"
                            android:fontFamily="@font/inter"
                            android:maxLines="1"
                            android:text="0-0"
                            android:textColor="#DADADA"
                            android:textSize="@dimen/_12sdp" />
                </LinearLayout>
        </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>